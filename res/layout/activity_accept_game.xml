<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/accept_game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accept_game_date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/accept_game_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accept_game_date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/accept_game_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
        android:id="@+id/accept_game_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_game_description">
    </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

    <ImageView
        android:id="@+id/accept_game_add_photo"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/add_photo_label"
        android:layout_margin="@dimen/margin"/>

    <ImageView
        android:id="@+id/accept_game_image"
        android:layout_width="match_parent"
        android:layout_height="150dp">
    </ImageView>

    <Button
        android:id="@+id/accept_game_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"/>
</LinearLayout>