<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_game_title">
        </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/game_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_game_description">
        </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

     </LinearLayout>   
     
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">        
    </ImageView>
    
    <Button
        android:id="@+id/friends_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_friends"
        android:layout_margin="20dp"
        android:onClick="showFriends"
        android:adjustViewBounds="true"
        android:background="@drawable/button_border">
    </Button>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:text="@string/start"
        android:onClick="saveGame"
        android:layout_weight="0"
        style="@style/AppButton">
    </Button>
</LinearLayout><!-- From: file:/C:/Users/Ksu/workspace/SocialTimeMachine/res/layout/activity_newgame.xml -->