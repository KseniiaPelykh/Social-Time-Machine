<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="@string/new_game_title"/>
    	
    	<EditText 
        	android:id="@+id/title_of_game"
        	android:layout_width="fill_parent"
        	android:layout_height="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
        	android:inputType = "text"
        	android:layout_weight="0"/>
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    	
        <TextView 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="@string/new_game_description"/>
        
    	<EditText 
        	android:id="@+id/text_of_user"
        	android:inputType="textMultiLine"
        	android:lines="8"
        	android:minLines="6"
        	android:maxLines="10"
        	android:layout_height="wrap_content"
        	android:layout_width="fill_parent"
        	android:layout_weight="0"/>
     </LinearLayout>   
     
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">        
    </ImageView>
    
    <Button
        android:id="@+id/friends_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/with_whom"
        android:layout_margin="20dp"
        android:onClick="showFriends"
        android:adjustViewBounds="true"
        android:background="@drawable/button_border">
    </Button>
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:text="@string/create" 
        android:onClick="saveGame"
        android:layout_weight="0"
        style="@style/AppButton">
    </Button>
</LinearLayout><!-- From: file:/C:/Users/Ksu/workspace/SocialTimeMachine/res/layout/activity_newgame.xml -->